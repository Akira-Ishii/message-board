<div class="panel panel-info">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <table class="table table-condensed table-hover">
      <tbody>
        <% @messages.each do |message| %>        
          <tr>
              <td name="m_name" align="right"><span class="label label-info"><%= message.name %></span></td>
              <td><%= message.body %></td>
              <td><%= link_to "edit" , edit_message_path(message) %></td>
              <td><%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
          </tr>
          <br />
        <% end %>
      </tbody>
    </table>
  </div>
</div>

