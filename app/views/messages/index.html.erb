<div class="panel panel-info">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <table class="table table-condensed table-hover">
      <tbody>
        <% @messages.each do |message| %>        
          <tr>
              <td name="m_name" align="right"><span class="label label-info"><%= message.name %></span></td>
              <td><%= message.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :name, "名前",{class: "col-sm-1 control-label"} %>
    <div class="col-sm-11">
      <%= f.text_field :name ,class: "form-control" %>
    </div>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :body, "内容", {class: "col-sm-1 control-label"} %>
    <div class="col-sm-11">
      <%= f.text_area :body ,class: "form-control" , rows:"3" %>
    </div>
  </div>  
  <br>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
  <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
