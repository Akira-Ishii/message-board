<div class="panel panel-info">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <table class="table table-condensed table-hover">
      <tbody>
        <% @messages.each do |message| %>        
          <tr>
              <td name="m_name" align="right"><span class="label label-info"><%= message.name %></span></td>
              <td name="m_age" align="center"><span class="label label-pill label-default"><%= message.age %>才</span></td>
              <td><%= message.body %>
                (
                <%= link_to "edit" , edit_message_path(message) %>
                <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
                ) 
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render 'form' %>
